generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  Food
  Cleaning
  Household
  Dog
  Other
}

enum StoreType {
  BigBox
  Grocery
  General

}

model Item {
  id       Int         @id @default(autoincrement())
  name     String?
  needed   Boolean     @default(false)
  category Category    @default(Food)
  stores   StoreType[]
}
